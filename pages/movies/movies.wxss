@import 'movie-template/movie-list/movie-list.wxss';
@import 'movie-template/movie-group/movie-group.wxss';
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #f0f0f0;
}
/*搜索栏*/
.search{
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  background:#f2f2f2;
  width:100%;
  height:80rpx;
}
.search icon{
  margin:20rpx 0 auto 20rpx;
}
.search input{
  width:600rpx;
  margin:15rpx 0 0 10rpx ;
  font-size:35rpx;
}
.movieList{
  display:flex;
  flex-direction: row;
}
.movie{
  text-align: center;
  font-size:30rpx;
}
.movie image{
  width:200rpx;
  height:260rpx;
}
/*搜索样式*/
.search-pannel{
  position:absolute;
  top:80rpx;
}