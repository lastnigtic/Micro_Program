@import 'music-template/music-item/music-item.wxss';

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.search {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  background: #f2f2f2;
  width: 100%;
}

.search icon {
  margin: 20rpx 30rpx 20rpx 40rpx;
}

.search input {
  width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 40rpx;
}

.MusicHeadPic {
  width: 100%;
  height: 480rpx;
  filter: blur(5px);
}

.MusicHead {
  width: 100%;
  height: 250rpx;
  background:rgba(0,0,0,0.3);
  margin-top: 230rpx;
  position: absolute;
}

.ListDescription {
  width:700rpx;
  height:230rpx;
  margin: 20rpx 25rpx 0 0; 
  color:white;
  overflow: hidden;
  line-height: 50rpx;
  padding-left:2em;
  white-space: normal;
  word-break: break-all;
  letter-spacing: 2px;
}
