 <template name="movie-points">
 <view class="movie-points-container">
 <block wx:for="{{stars}}" wx:for-item="i">
    <image wx:if="{{i}}" class="movie-points-star" src="/data/icon/star.png"></image>
    <image wx:else class="movie-points-star" src="/data/icon/none-star.png"></image>
  </block>
    <text class="movie-points-text">{{points}}</text>
  </view>
  </template>